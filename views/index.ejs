<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Zoo Management</title>
</head>
<body>
  <h1>Zoo Management</h1>
  <h2>List of Animals</h2>

  <!-- Form untuk menambah hewan baru -->
  <h3>Add New Animal</h3>
  <form action="/animals" method="POST">
    <label for="name">Nama:</label>
    <input type="text" name="name" required><br><br>
    <label for="species">Spesies:</label>
    <input type="text" name="species" required><br><br>
    <label for="age">Umur:</label>
    <input type="number" name="age" required><br><br>
    <label for="condition">Kondisi:</label>
    <textarea name="condition" required></textarea><br><br>
    <button type="submit">Add Animal</button>
  </form>

  <!-- Tabel daftar hewan -->
  <h3>Animals List</h3>
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nama</th>
        <th>Spesies</th>
        <th>Umur</th>
        <th>Kondisi</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% animals.forEach(animal => { %>
        <tr>
          <td><%= animal.id %></td>
          <td><%= animal.name %></td>
          <td><%= animal.species %></td>
          <td><%= animal.age %></td>
          <td><%= animal.condition %></td>
          <td>
            <!-- Tombol Edit untuk mengubah data -->
            <form action="/edit-animal/<%= animal.id %>" method="GET" style="display:inline;">
              <button type="submit">Edit</button>
            </form>
            <!-- Tombol Hapus untuk menghapus data -->
            <form action="/delete-animal/<%= animal.id %>" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
